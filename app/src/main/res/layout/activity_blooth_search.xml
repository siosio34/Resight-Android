<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.Activity.BluetoothSearchActivity"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/blooth_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="@+id/blooth_constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/blooth_constraintLayout"
        android:id="@+id/view"
        android:background="@color/colorBloothMenu"
        />

    <ImageView
        android:id="@+id/blooth_imageView"
        app:srcCompat="@drawable/icon_blooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/blooth_constraintLayout"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="블루투스 연결"
        app:layout_constraintStart_toEndOf="@id/blooth_imageView"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        />

    <com.zcw.togglebutton.ToggleButton
        android:id="@+id/check_blooth_button"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        >
    </com.zcw.togglebutton.ToggleButton>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="@+id/blooth_constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/blooth_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@color/colorBloothMenu"
        />

    <ImageView
        android:id="@+id/paring_imageView"
        app:srcCompat="@drawable/icon_paring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        />

    <TextView
        android:id="@+id/recent_paring_device_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/paring_imageView"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        />


    <TextView
        android:id="@+id/resent_blooth_list_title"
        android:text="등록된 기기 목록"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/blooth_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ListView
        android:id="@+id/blooth_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/resent_blooth_list_title"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/new_blooth_list_title"
        android:text="새로운 기기 목록"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/blooth_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/blooth_list"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

    <ListView
        android:id="@+id/new_bluetooth_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/new_blooth_list_title"
        android:layout_marginTop="7dp"
       />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_bluetooth_list"
        app:layout_constraintLeft_toRightOf="@id/blooth_constraintLayout"
        app:layout_constraintRight_toLeftOf="@id/blooth_constraintLayout"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="128dp"
        android:src="@drawable/icon_handphone"
        />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>

