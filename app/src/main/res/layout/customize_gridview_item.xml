<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:fitsSystemWindows="true"
    android:id="@+id/custom_category_item"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/custom_category_item_imageView"
        app:layout_constraintTop_toBottomOf="@+id/custom_category_item"
        app:layout_constraintLeft_toLeftOf="@+id/custom_category_item"
        app:layout_constraintRight_toRightOf="@+id/custom_category_item"
        />

    <View
        android:id="@+id/custom_category_item_border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        app:layout_constraintTop_toBottomOf="@+id/custom_category_item"
        app:layout_constraintLeft_toLeftOf="@+id/custom_category_item"
        app:layout_constraintRight_toRightOf="@+id/custom_category_item"
        android:layout_marginTop="0dp"
        >

    </View>

    <TextView
        android:id="@+id/custom_category_item_textView"
        app:layout_constraintTop_toBottomOf="@+id/custom_category_item_imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="어플 이름"
        />

</android.support.constraint.ConstraintLayout>