<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/test_train_main_fragment_layout"
    android:background="#F2F2F2">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/tabbar_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <Button
        android:id="@+id/test_mode_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Test Mode"
        android:textColor="#595959"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tabbar_guideline"
    />

    <View
        android:id="@+id/test_mode_button_bottom"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#595959"
        app:layout_constraintTop_toBottomOf="@+id/test_mode_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tabbar_guideline" />


    <Button
        android:id="@+id/train_mode_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Train Mode"
        android:textColor="#ACACAC"
        app:layout_constraintLeft_toLeftOf="@+id/tabbar_guideline"
        app:layout_constraintRight_toRightOf="parent"
     />

    <View
        android:id="@+id/train_mode_button_bottom"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#ACACAC"
        app:layout_constraintTop_toBottomOf="@+id/train_mode_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tabbar_guideline" />

    <FrameLayout
        android:id="@+id/test_train_mode_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/train_mode_button_bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        >
    </FrameLayout>

</android.support.constraint.ConstraintLayout>