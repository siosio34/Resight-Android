<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="110dp"
    android:fitsSystemWindows="true"
    android:id="@+id/hand_motion_item"
    android:background="#F2F2F2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hand_motion_imageView"
        app:layout_constraintLeft_toLeftOf="@+id/hand_motion_item"
        app:layout_constraintRight_toRightOf="@+id/hand_motion_item"
        app:layout_constraintTop_toBottomOf="@+id/hand_motion_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/hand_motion_textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/hand_motion_imageView"
        app:layout_constraintRight_toRightOf="@+id/hand_motion_imageView"
        app:layout_constraintTop_toBottomOf="@+id/hand_motion_imageView"
        android:layout_marginTop="5dp"
        />

</android.support.constraint.ConstraintLayout>