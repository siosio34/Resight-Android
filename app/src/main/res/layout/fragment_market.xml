<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/market_fragment"
    tools:ignore="MissingPrefix"
    android:background="@color/colorPrimary">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="추천 카테고리"
        />
    
    <View
        android:id="@+id/market_category_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        >
        
    </View>
    
    <ImageView
        android:id="@+id/market_category_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_view"
        app:layout_constraintRight_toRightOf="@+id/market_category_view"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="260dp"
        android:layout_marginEnd="260dp"
        android:src="@drawable/icon_game"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_game"
        app:layout_constraintRight_toRightOf="@+id/market_category_game"
        android:layout_marginTop="65dp"
        android:text="게임"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/market_category_tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_view"
        app:layout_constraintRight_toRightOf="@+id/market_category_view"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginRight="180dp"
        android:layout_marginEnd="180dp"
        android:src="@drawable/icon_tools"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_tools"
        app:layout_constraintRight_toRightOf="@+id/market_category_tools"
        android:layout_marginTop="65dp"
        android:text="도구"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/market_category_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_view"
        app:layout_constraintRight_toRightOf="@+id/market_category_view"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/icon_multimedia"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_multimedia"
        app:layout_constraintRight_toRightOf="@+id/market_category_multimedia"
        android:layout_marginTop="65dp"
        android:text="멀티미디어"

        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/market_category_usability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_view"
        app:layout_constraintRight_toRightOf="@+id/market_category_view"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="260dp"
        android:layout_marginStart="260dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_usability"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/market_category_view"
        app:layout_constraintLeft_toLeftOf="@+id/market_category_usability"
        app:layout_constraintRight_toRightOf="@+id/market_category_usability"
        android:layout_marginTop="65dp"
        android:text="생산성"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/market_populality_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/market_category_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="인기 어플"
        />

    <GridView
        android:id="@+id/market_grideview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/market_populality_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        >
    </GridView>



</android.support.constraint.ConstraintLayout>